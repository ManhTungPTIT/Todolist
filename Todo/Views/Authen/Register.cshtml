@page
@model Todo.Models.Models.Users;

@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
        rel="stylesheet"/>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"/>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <link rel="stylesheet" href="/css/Register.css"/>
</head>

<body>
<div class="Main container-fluid row" style="height: 100vh">
    <div class="Main_video col-6">
        <video class="video" loop autoplay muted>
            <source
                src="https://amela.vn/wp-content/uploads/2021/07/video_pc.mp4"
                type="video/mp4"/>
        </video>
    </div>

    <div class="Main_login col-6">
        <form >
            <div class="Login">
                <h1 style="color: #fea628">Resgister</h1>
                <div class="Login_text">
                    <div class="Text">
                        <i class="fa-regular fa-user"></i>
                        <input type="text" placeholder="Email" id="username" name="userName"/>
                    </div>
                    <div class="Text">
                        <i class="fa-solid fa-lock"></i>
                        <input type="password" placeholder="Password" id="password" name="password"/>
                        <i class="fa-regular fa-eye" onclick="changePass()"></i>
                        <i class="fa-regular fa-eye-slash" onclick="changePass()"></i>
                    </div>
                    <div class="Text">
                        <i class="fa-solid fa-lock"></i>
                        <input
                            type="password"
                            id="confirm"
                            placeholder="Confirm password"/>
                        <i class="fa-regular fa-eye" onclick="change()"></i>
                        <i class="fa-regular fa-eye-slash" onclick="change()"></i>
                    </div>
                    <span class="mess">Hãy nhập lại mật khẩu</span>
                    <div class="Info">
                        <input class="shadow-none" type="text" placeholder="Phone" id="phone" name="phone"/>
                        <input class="shadow-none" type="text" placeholder="Address" id="address" name="address"/>
                    </div>
                </div>
                <div class="Controller">
                    <button id="register" type="submit" class="fs-4 my-3">Resgister</button>
                    <button class="fs-4 my-3" asp-action="Login" asp-controller="Authen">
                        Login
                    </button>
                </div>
            </div>
        </form>

        

    </div>
</div>
<script src="/js/Register.js"></script>
</body>
</html>