<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <nav>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
        />
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
        <link rel="stylesheet" href="/css/Todo.css" />
        <link rel="stylesheet" href="/css/Individual.css" />
    </nav>
</head>
<body>

<div class=" row d-flex flex-column" style="padding-right: 0;margin-left: 0; margin-right: 0">
    <div
        class="Title col-2 d-flex flex-row justify-content-between align-items-center w-100 px-5"
    >
        <h3>Xin chao, @User.Identity?.Name !</h3>
        <a asp-controller="Authen" asp-action="Logout">Log out</a>
    </div>

    <div class="Main row container col-12">
        <div class="Menu-icon col-3" style="padding: 0">
            <div
                class="Item d-flex flex-row align-items-center justify-content-around"
            >
                <i class="fa-solid fa-book fs-2 ps-5 child" style="width: 36px"></i>
                <p class="mt-4 me-5 fs-5 child">Task chung</p>
            </div>

            <div
                class="Item d-flex flex-row align-items-center justify-content-around"
            >
                <i
                    class="fa-solid fa-book-open fs-2 ps-5 child"
                    style="width: 36px"
                ></i>
                <p class="mt-4 me-4 fs-5 child">Task cá nhân</p>
            </div>
        </div>

        <div class="col-9 px-4 pt-2">
            @RenderBody()
        </div>
    </div>
</div>
<script src="/js/Menu_icon_Admin.js"></script>
</body>
</html>